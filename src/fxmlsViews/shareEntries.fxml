<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20"
      style="-fx-background-color: linear-gradient(to bottom right, #fff1eb, #ace0f9);"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.shareEntriesController">

    <Label text="Share Your Journal">
        <font>
            <Font name="Segoe Print" size="32"/>
        </font>
    </Label>

    <Label fx:id="statusLbl" text="Checking your entries...">
        <font>
            <Font size="14"/>
        </font>
    </Label>

    <Button fx:id="downloadBtn"
            text="Download PDF"
            onAction="#downloadPdf"
            disable="true"
            prefWidth="180"/>

    <Button text="Back to Home" onAction="#back"/>

    <padding>
        <Insets top="30" bottom="30" left="30" right="30"/>
    </padding>

</VBox>
