<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="460.0" prefWidth="500.0" spacing="15.0" style="-fx-background-color: linear-gradient(to bottom right, #fff1eb, #ace0f9);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.loginController">
   <children>
      <Label fx:id="titlelabel" text="Memento">
         <font>
            <Font name="Segoe Print" size="36.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <Label fx:id="questionLbl" alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="228.0" text="QUESTION">
         <font>
            <Font name="Roboto" size="24.0" />
         </font>
      </Label>
      <TextArea fx:id="ansTxt" prefHeight="289.0" prefWidth="460.0" promptText="Type your answer here" wrapText="true" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="prevBtn" mnemonicParsing="false" onAction="#prev" prefHeight="26.0" prefWidth="117.0" text="Prev" />
            <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#save" prefHeight="26.0" prefWidth="117.0" text="Save" />
            <Button fx:id="nextBtn" mnemonicParsing="false" onAction="#next" prefHeight="26.0" prefWidth="117.0" text="Next" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
